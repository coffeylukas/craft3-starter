{
  "require": {
    "aelvan/imager": "^2.4",
    "clubstudioltd/craft-asset-rev": "^6.0",
    "craftcms/aws-s3": "^1.2",
    "craftcms/cms": "^3.4.0",
    "craftcms/redactor": "^2.6",
    "doublesecretagency/craft-cpcss": "^2.2",
    "misterbk/mix": "^1.5",
    "mmikkel/cp-field-inspect": "^1.1",
    "sebastianlenz/linkfield": "^1.0",
    "vlucas/phpdotenv": "^3.4.0"
  },
  "require-dev": {
    "yiisoft/yii2-shell": "^2.0.3"
  },
  "autoload": {
    "psr-4": {
      "modules\\": "modules/"
    }
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "platform": {
      "php": "7.0"
    }
  },
  "scripts": {
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ]
  }
}
